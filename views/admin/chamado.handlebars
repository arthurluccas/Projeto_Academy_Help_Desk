<div class="modal fade" id="imagem1_aluno{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="text-end mb-2">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="text-center">
        <img src="/upload/chamado_aluno/{{this.img1}}" alt="error" width="100%">
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal_Aluno -->
<div class="modal fade" id="imagem2_aluno{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="text-end mb-2">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="text-center">
        <img src="/upload/chamado_aluno/{{this.img2}}" alt="error" width="100%">
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal_Aluno -->
<div class="modal fade" id="imagem3_aluno{{this.id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-body">
        <div class="text-end mb-2">
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="text-center">
        <img src="/upload/chamado_aluno/{{this.img3}}" alt="error" width="100%">
        </div>
      </div>
