<head>
  <title>Alteração do chamado</title>
  <script defer src="/js/foto_perfil.js"></script>
</head>
<header
  class="shadow fixed-top"
  style="
        background: rgb(45, 111, 131);
        background: linear-gradient(
          90deg,
          rgba(45, 111, 131, 1) 17%,
          rgba(28, 46, 76, 1) 100%
        );
      "
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-2 col-sm-1 col-lg-1">
        <a href="/professor" class="text-decoration-none text-white">
          <img
            class="img-fluid float-start"
            src="/img/logo_tcc.png"
            alt="logo aqui"
            width="90px"
            height="90px"
            title="logo"
          />
        </a>
      </div>
      <div class="col-md-5 col-sm-6 col-lg-4">
        <a
          href="/professor"
          class="text-white text-decoration-none d-inline-block"
        >
          <h1 class="text-start fs-2" title="academy help desk">Academy Help
            Desk</h1>
        </a>
      </div>
      <div class="col-md-5 col-sm-5 col-lg-7 text-end">
        <a
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasScrolling"
          aria-controls="offcanvasScrolling"
          style="cursor: pointer; display:inline-block"
        ><div id="img-hover" title="lista de navagação"></div></a>
      </div>
    </div>
  </div>
  <div
    class="offcanvas offcanvas-end shadow"
    data-bs-scroll="true"
    data-bs-backdrop="false"
    tabindex="-1"
    id="offcanvasScrolling"
    aria-labelledby="offcanvasScrollingLabel"
  >
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Olá,
        {{usuario}}
      </h5>
      <button
        type="button"
        class="btn-close text-reset"
        data-bs-dismiss="offcanvas"
        aria-label="Close"
      ></button>
    </div>
    <div class="offcanvas-body">
      <div class="row mb-4">
        <form
          action="/professor/chamado/alteracao/foto"
          method="post"
          enctype="multipart/form-data"
          id="form_perfil"
        >
          {{#if foto}}
            <img
              src="/upload/professor/{{foto}}"
              class="rounded-circle mx-auto d-block"
              id="foto_perfil"
              height="100px"
              width="100px"
              style="cursor: pointer;"
            />
            <div class="text-center mt-3">
              <a
                href="/professor/chamado/alteracao/exclusao/{{matricula}}"
                class="btn btn-outline-danger"
              >Excluir</a>
            </div>
          {{else}}
            <img
              src="\img\do-utilizador.png"
              class="rounded-circle mx-auto d-block"
              id="foto_perfil"
              height="100px"
              width="100px"
              style="cursor: pointer;"
            />
          {{/if}}
          <input
            class="form-control"
            type="file"
            name="professor_foto"
            accept="image/*"
            maxlength="150"
            id="input_perfil"
            hidden
          />
        </form>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor"
            class="btn btn-outline-dark"
            type="button"
          >Inicio</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/aluno"
            class="btn btn-outline-dark"
            type="button"
          >Lista de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/chamado"
            class="btn btn-outline-dark"
            type="button"
          >Seus chamados</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/cadastrar-aluno"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/criar-chamado"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de chamados</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a 
          href="/professor/chat" 
          class="btn btn-outline-dark" 
          type="button">
          Atendimento
          </a>
        </div>
      </div>
      <div class="row mt-5">
        <div class="d-grid gap-2">
          <a href="/professor/logout" class="btn btn-outline-danger" type="button">Sair</a>
        </div>
      </div>
    </div>
  </div>
</header>
<main style="margin-top: 150px;">
{{> _msg}}
  {{#if error}}
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="alert alert-danger w-50">{{error}}</div>
      </div>
    </div>
  {{/if}}
  {{#if sucesso}}
    <div class="container mt-5">
      <div class="row justify-content-center text-center">
        <div class="alert alert-success w-50">{{sucesso}}</div>
      </div>
    </div>
  {{/if}}
  <div class="container" style="margin-top: 40px">
    <div class="row justify-content-center mb-5">
      <div class="col-md-12 col-sm-12 col-lg-12">
        <h1 class="text-center text-dark mb-5">Alteração de chamado</h1>
        <div class="card border border-secondary shadow">
          <div class="card-body">
            <form
              action="/professor/chamado/alteracao"
              method="post"
              enctype="multipart/form-data"
            >
            <div class="row mb-3">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label class="form-label fs-5">Status</label>
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="status"
                  >
                    <option disabled value="">Selecione</option>
                    <option
                      selected
                      value="{{chamado.statusd}}"
                    >{{chamado.statusd}}</option>
                    <option value="Aberto">Aberto</option>
                    <option value="Em Atendimento">Em Atendimento</option>
                    <option value="Fechado">Fechado</option>
                  </select>
                </div>
                </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    for="floatingInput-titulo"
                    class="form-label fs-5"
                  >Título</label>
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="floatingInput-titulo"
                      placeholder="Titulo"
                      name="titulo"
                      maxlength="90"
                      value="{{chamado.titulo}}"
                    />
                    <label for="floatingInput-titulo">Título</label>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    for="floatingInput-titulo1"
                    class="form-label fs-5"
                  >Assunto</label>
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="floatingInput-titulo1"
                      placeholder="Assunto"
                      name="assunto"
                      maxlength="20"
                      value="{{chamado.assunto}}"
                    />
                    <label for="floatingInput-titulo1">Assunto</label>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-md-6 col-lg-6 col-sm-12 nivel">
                  <label class="form-label fs-5">Nível</label>
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="nivel"
                  >
                    <option disabled value="">Selecione</option>
                    <option
                      selected
                      value="{{chamado.nivel}}"
                    >{{chamado.nivel}}</option>
                    <option value="2">2 - Remoto</option>
                    <option value="3">3 - Presencial</option>
                  </select>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-12">
                  <label class="form-label fs-5">Prioridade</label>
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="prioridade"
                  >
                    <option disabled value="">Selecione</option>
                    <option
                      selected
                      value="{{chamado.prioridade}}"
                    >{{chamado.prioridade}}</option>
                    <option value="Baixa">Baixa</option>
                    <option value="Média">Média</option>
                    <option value="Alta">Alta</option>
                    <option value="Urgente">Urgente</option>
                  </select>
                </div>
              </div>
              {{#if chamado.img1}}
                <p class="card-text mb-0 fs-5">Imagens:</p>
                <div class="row">
                  <img
                    class="btn img-fluid rounded float-start h-25 w-25"
                    data-bs-toggle="modal"
                    data-bs-target="#imagem1_professor"
                    src="/upload/chamado_professor/{{chamado.img1}}"
                    alt="error"
                  />
                  {{#if chamado.img2}}
                    <img
                      class="btn img-fluid rounded float-start h-25 w-25"
                      data-bs-toggle="modal"
                      data-bs-target="#imagem2_professor"
                      src="/upload/chamado_professor/{{chamado.img2}}"
                      alt="error"
                    />
                  {{/if}}
                  {{#if chamado.img3}}
                    <img
                      class="btn img-fluid rounded float-start h-25 w-25"
                      data-bs-toggle="modal"
                      data-bs-target="#imagem3_professor"
                      src="/upload/chamado_professor/{{chamado.img3}}"
                      alt="error"
                    />
                  {{/if}}
                </div>
                <div class="row mb-2">
                <div class="col-md-3 col-lg-3 col-sm-12 mb-sm-1">
                  <input
                    type="submit"
                    class="btn btn-danger"
                    value="Deletar imagens"
                    name="deletar"
                  />
                  </div>
                  </div>
              {{/if}}
              <div class="row mb-3">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label class="form-label fs-5">Descrição</label>
                  <div class="form-floating">
                    <textarea
                      class="form-control"
                      placeholder="Deixe seu problema aqui"
                      id="floatingTextarea"
                      rows="10"
                      name="descricao"
                      style="height: 220px;"
                    >{{chamado.descricao}}</textarea>
                    <label for="floatingTextarea">Descreva seu problema</label>
                  </div>
                </div>
              </div>
              <div class="row mb-4">
              <div class="col-md-12 col-sm-12 col-lg-12">
                    <label for="formFileMultiple" class="form-label"></label>
                    <input
                      class="form-control"
                      type="file"
                      id="formFileMultiple"
                      name="imagem_alteracao_chamado"
                      accept="image/*"
                      maxlength="150"
                      multiple
                    />
                    <p class="mb-0 text-danger">* O envio máximo de arquivos são 3</p>
                    <p class="mb-0 text-danger">* Apenas png, jpg, jpeg serão aceitos</p>
                  </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <input
                    type="submit"
                    class="btn btn-outline-warning botao"
                    value="Alterar chamado"
                    name="alterar"
                  />
                  <a href="/professor/chamado"><button
                    class="btn btn-outline-primary botao"
                    type="button"
                  >Voltar</button></a>
                  </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal_Professor -->
  <div
    class="modal fade"
    id="imagem1_professor"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <div class="text-end mb-2">
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="text-center">
            <img
              src="/upload/chamado_professor/{{chamado.img1}}"
              alt="error"
              width="100%"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal_Professor -->
  <div
    class="modal fade"
    id="imagem2_professor"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <div class="text-end mb-2">
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="text-center">
            <img
              src="/upload/chamado_professor/{{chamado.img2}}"
              alt="error"
              width="100%"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- Modal_Professor -->
  <div
    class="modal fade"
    id="imagem3_professor"
    tabindex="-1"
    aria-labelledby="exampleModalLabel"
    aria-hidden="true"
  >
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-body">
          <div class="text-end mb-2">
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="text-center">
            <img
              src="/upload/chamado_professor/{{chamado.img3}}"
              alt="error"
              width="100%"
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{{> _footer}}