<head>
  <title>Criar chamado</title>
    <script defer src="/js/cadastro_validacao.js"></script>
    <script defer src="/js/foto_perfil.js"></script>
</head>
<header
  class="shadow fixed-top"
  style="
        background: rgb(45, 111, 131);
        background: linear-gradient(
          90deg,
          rgba(45, 111, 131, 1) 17%,
          rgba(28, 46, 76, 1) 100%
        );
      "
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-2 col-sm-1 col-lg-1">
        <a href="/professor" class="text-decoration-none text-white">
          <img
            class="img-fluid float-start"
            src="/img/logo_tcc.png"
            alt="logo aqui"
            width="90px"
            height="90px"
            title="logo"
          />
        </a>
      </div>
      <div class="col-md-5 col-sm-6 col-lg-4">
        <a
          href="/professor"
          class="text-white text-decoration-none d-inline-block"
        >
          <h1 class="text-start fs-2" title="academy help desk">Academy Help
            Desk</h1>
        </a>
      </div>
      <div class="col-md-5 col-sm-5 col-lg-7 text-end">
        <a
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasScrolling"
          aria-controls="offcanvasScrolling"
          style="cursor: pointer; display:inline-block"
        ><div id="img-hover" title="lista de navagação"></div></a>
      </div>
    </div>
  </div>
  <div
    class="offcanvas offcanvas-end shadow"
    data-bs-scroll="true"
    data-bs-backdrop="false"
    tabindex="-1"
    id="offcanvasScrolling"
    aria-labelledby="offcanvasScrollingLabel"
  >
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Olá,
        {{usuario}}
      </h5>
      <button
        type="button"
        class="btn-close text-reset"
        data-bs-dismiss="offcanvas"
        aria-label="Close"
      ></button>
    </div>
    <div class="offcanvas-body">
      <div class="row mb-4">
        <form
          action="/professor/criar-chamado/foto"
          method="post"
          enctype="multipart/form-data"
          id="form_perfil"
        >
          {{#if foto}}
            <img
              src="/upload/professor/{{foto}}"
              class="rounded-circle mx-auto d-block"
              id="foto_perfil"
              height="100px"
              width="100px"
              style="cursor: pointer;"
            />
            <div class="text-center mt-3">
              <a
                href="/professor/criar-chamado/exclusao/{{matricula}}"
                class="btn btn-outline-danger"
              >Excluir</a>
            </div>
          {{else}}
            <img
              src="\img\do-utilizador.png"
              class="rounded-circle mx-auto d-block"
              id="foto_perfil"
              height="100px"
              width="100px"
              style="cursor: pointer;"
            />
          {{/if}}
          <input
            class="form-control"
            type="file"
            name="professor_foto"
            accept="image/*"
            maxlength="150"
            id="input_perfil"
            hidden
          />
        </form>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor"
            class="btn btn-outline-dark"
            type="button"
          >Inicio</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/aluno"
            class="btn btn-outline-dark"
            type="button"
          >Lista de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/chamado"
            class="btn btn-outline-dark"
            type="button"
          >Seus chamados</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/cadastrar-aluno"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/professor/criar-chamado"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de chamados</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a 
          href="/professor/chat" 
          class="btn btn-outline-dark" 
          type="button">
          Atendimento
          </a>
        </div>
      </div>
      <div class="row mt-5">
        <div class="d-grid gap-2">
          <a href="/professor/logout" class="btn btn-outline-danger" type="button">Sair</a>
        </div>
      </div>
    </div>
  </div>
</header>
<main style="margin-top: 150px;">
  {{> _msg}}
  {{#if error}}
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="alert alert-danger w-50">{{error}}</div>
      </div>
    </div>
  {{/if}}
  {{#if sucesso}}
    <div class="container mt-5">
      <div class="row justify-content-center text-center">
        <div class="alert alert-success w-50">{{sucesso}}</div>
      </div>
    </div>
  {{/if}}
  <div class="container" style="margin-top: 40px">
    <div class="row justify-content-center mb-5">
      <div class="col-md-12 col-sm-12 col-lg-12">
        <h1 class="text-center text-dark mb-5">Criar chamado</h1>
        <div class="card border border-secondary">
          <div class="card-body">
            <form action="/professor/criar-chamado/nova" method="post" enctype="multipart/form-data" class="needs-validation"
              novalidate>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    for="floatingInput-titulo"
                    class="form-label fs-5"
                  >Título</label>
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="floatingInput-titulo"
                      placeholder="Titulo"
                      name="titulo"
                      maxlength="90"
                      value="{{dados.titulo}}"
                      required
                    />
                    <label for="floatingInput-titulo">Título</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite o título do chamado
                    </div>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    for="floatingInput-titulo1"
                    class="form-label fs-5"
                  >Assunto</label>
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="floatingInput-titulo1"
                      placeholder="Assunto"
                      name="assunto"
                      maxlength="20"
                      value="{{dados.assunto}}"
                      required
                    />
                    <label for="floatingInput-titulo1">Assunto</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite o assunto do chamado
                    </div>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-md-6 col-lg-6 col-sm-12">
                  <label class="form-label fs-5">Nível</label>
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="nivel"
                    required
                  >
                    {{#if dados.nivel}}               
                    <option disabled value="">Selecione</option> 
                    <option selected value="{{dados.nivel}}">{{dados.nivel}}</option>
                    {{else}}
                    <option selected disabled value="">Selecione</option>
                    {{/if}}
                    <option value="2">2 - Remoto</option>
                    <option value="3">3 - Presencial</option>
                  </select>
                  <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite o nível do chamado
                    </div>
                </div>
                <div class="col-md-6 col-lg-6 col-sm-12">
                  <label class="form-label fs-5">Prioridade</label>
                  <select
                    class="form-select"
                    aria-label="Default select example"
                    name="prioridade"
                    required
                  >
                    {{#if dados.prioridade}}
                    <option disabled value="">Selecione</option>
                    <option selected value="{{dados.prioridade}}">{{dados.prioridade}}</option>
                    {{else}}
                    <option selected disabled value="">Selecione</option>
                    {{/if}}
                    <option value="Baixa">Baixa</option>
                    <option value="Média">Média</option>
                    <option value="Alta">Alta</option>
                    <option value="Urgente">Urgente</option>
                  </select>
                  <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite a prioridade do chamado
                    </div>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label class="form-label fs-5">Descrição</label>
                  <div class="form-floating">
                    <textarea
                      class="form-control"
                      placeholder="Deixe seu problema aqui"
                      id="floatingTextarea"
                      rows="10"
                      name="descricao"
                      style="height: 220px;"
                      required
                    >{{dados.descricao}}</textarea>
                    <label for="floatingTextarea">Descreva seu problema</label>
                    <div class="valid-feedback">Validado!</div>
                    <div class="invalid-feedback">
                      Por favor, digite a descrição do chamado
                    </div>
                  </div>
                </div>
              </div>
              <div class="row mb-4">
                <div class="col-md-12 col-sm-12 col-lg-12">
                  <label class="form-label fs-5">Arquivo de imagem</label>
                  <label for="formFileMultiple" class="form-label"></label>
                  <input
                    class="form-control"
                    type="file"
                    id="formFileMultiple"
                    name="imagem_chamado1"
                    accept="image/*"
                    maxlength="150"
                    multiple
                  />
                  <p class="mb-0 text-danger">* O envio máximo de arquivos são 3</p>
                  <p class="mb-0 text-danger">* Apenas png, jpg, jpeg serão aceitos</p>
                  <p class="mb-0 text-danger">* Este campo é opcional</p>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <button class="btn btn-outline-primary botao" type="submit">
                    Criar chamado
                  </button>
                  <a href="/professor"><button
                      type="button"
                      class="btn btn-outline-primary botao"
                    >
                      Voltar
                    </button></a>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{{> _footer}}