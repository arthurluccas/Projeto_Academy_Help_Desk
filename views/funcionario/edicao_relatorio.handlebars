<head>
  <title>Alteração de relatório</title>
  <script defer src="/js/foto_perfil.js"></script>
</head>
<header
  class="shadow fixed-top"
  style="
        background: rgb(45, 111, 131);
        background: linear-gradient(
          90deg,
          rgba(45, 111, 131, 1) 17%,
          rgba(28, 46, 76, 1) 100%
        );
      "
>
  <div class="container-fluid">
    <div class="row align-items-center">
      <div class="col-md-2 col-sm-1 col-lg-1">
        <a href="/funcionario" class="text-decoration-none text-white">
          <img
            class="img-fluid float-start"
            src="/img/logo_tcc.png"
            alt="logo aqui"
            width="90px"
            height="90px"
            title="logo"
          />
        </a>
      </div>
      <div class="col-md-5 col-sm-6 col-lg-4">
        <a
          href="/funcionario"
          class="text-white text-decoration-none d-inline-block"
        >
          <h1 class="text-start fs-2" title="academy help desk">Academy Help
            Desk</h1>
        </a>
      </div>
      <div class="col-md-5 col-sm-5 col-lg-7 text-end">
        <a
          data-bs-toggle="offcanvas"
          data-bs-target="#offcanvasScrolling"
          aria-controls="offcanvasScrolling"
          style="cursor: pointer; display:inline-block"
        ><div id="img-hover" title="lista de navagação"></div></a>
      </div>
    </div>
  </div>
  <div
    class="offcanvas offcanvas-end shadow"
    data-bs-scroll="true"
    data-bs-backdrop="false"
    tabindex="-1"
    id="offcanvasScrolling"
    aria-labelledby="offcanvasScrollingLabel"
  >
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Olá,
        {{usuario}}
      </h5>
      <button
        type="button"
        class="btn-close text-reset"
        data-bs-dismiss="offcanvas"
        aria-label="Close"
      ></button>
    </div>
    <div class="offcanvas-body">
      <div class="row mb-4">
        <form
          action="/funcionario/relatorio/alteracao/foto"
          method="post"
          enctype="multipart/form-data"
          id="form_perfil"
        >
          {{#if foto}}
            <img
              src="/upload/funcionario/{{foto}}"
              class="rounded-circle mx-auto d-block"
              id="foto_perfil"
              height="100px"
              width="100px"
              style="cursor: pointer;"
            />
            <div class="text-center mt-3">
              <a
                href="/funcionario/relatorio/alteracao/exclusao/{{matricula}}"
                class="btn btn-outline-danger"
              >Excluir</a>
            </div>
          {{else}}
            <img
              src="\img\do-utilizador.png"
              class="rounded-circle mx-auto d-block"
              id="foto_perfil"
              height="100px"
              width="100px"
              style="cursor: pointer;"
            />
          {{/if}}
          <input
            class="form-control"
            type="file"
            name="funcionario_foto"
            accept="image/*"
            maxlength="150"
            id="input_perfil"
            hidden
          />
        </form>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/funcionario"
            class="btn btn-outline-dark"
            type="button"
          >Inicio</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/funcionario/chamado"
            class="btn btn-outline-dark"
            type="button"
          >Lista de chamados</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/funcionario/professor"
            class="btn btn-outline-dark"
            type="button"
          >Lista de professores</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/funcionario/aluno"
            class="btn btn-outline-dark"
            type="button"
          >Lista de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/funcionario/relatorio"
            class="btn btn-outline-dark"
            type="button"
          >Seus relatórios</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/funcionario/cadastrar-professor"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de professores</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/funcionario/cadastrar-aluno"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de alunos</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a
            href="/funcionario/cadastrar-relatorio"
            class="btn btn-outline-dark"
            type="button"
          >Cadastro de relatórios</a>
        </div>
      </div>
      <div class="row mb-3">
        <div class="d-grid gap-2">
          <a 
          href="/funcionario/chat" 
          class="btn btn-outline-dark" 
          type="button">
          Chat
          </a>
        </div>
      </div>
      <div class="row mt-5">
        <div class="d-grid gap-2">
          <a href="/funcionario/logout" class="btn btn-outline-danger" type="button">Sair</a>
        </div>
      </div>
    </div>
  </div>
</header>
<main style="margin-top: 150px;">
{{> _msg}}
  {{#if error}}
    <div class="container">
      <div class="row justify-content-center text-center">
        <div class="alert alert-danger w-50">{{error}}</div>
      </div>
    </div>
  {{/if}}
<div class="container" style="margin-top: 40px">
    <div class="row justify-content-center mb-5">
      <div class="col-md-12 col-sm-12 col-lg-12">
        <h1 class="text-center text-dark mb-5">Alteração do relatório</h1>
        <div class="card border border-secondary shadow">
          <div class="card-body">
            <form
              action="/funcionario/relatorio/alteracao"
              method="post"
            >
              <div class="row">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label
                    for="floatingInput-titulo"
                    class="form-label fs-5"
                  >Título</label>
                  <div class="form-floating mb-3">
                    <input
                      type="text"
                      class="form-control"
                      id="floatingInput-titulo"
                      placeholder="Titulo"
                      name="titulo"
                      maxlength="40"
                      value="{{relatorio.titulo}}"
                    />
                    <label for="floatingInput-titulo">Título</label>
                  </div>
                </div>
              </div>
              <div class="row mb-3">
                <div class="col-md-12 col-lg-12 col-sm-12">
                  <label class="form-label fs-5">Relatório:</label>
                  <div class="form-floating">
                    <textarea
                      class="form-control"
                      placeholder="Deixe seu problema aqui"
                      id="floatingTextarea"
                      rows="200"
                      name="conteudo"
                      style="height: 220px;"
                    >{{relatorio.conteudo}}</textarea>
                    <label for="floatingTextarea">Digite seu relatório</label>
                  </div>
                </div>
              </div>
              <div class="row mb-2">
                <div class="col-md-2 col-lg-1 col-sm-12 me-lg-5">
                  <input
                    type="submit"
                    class="btn btn-outline-warning botao"
                    value="Alterar relatório"
                    name="alterar"
                  />
                  </div>
                <div class="col-md-3 col-lg-1 col-sm-12 ms-md-3">
                  <a href="/funcionario/relatorio"><button
                    class="btn btn-outline-primary botao"
                    type="button"
                  >Voltar</button></a>
                  </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
{{> _footer}}